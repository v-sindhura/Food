        }
        .Grid{
            position:absolute;
            top:600px;
            font:italic small-caps bold 20px georgia;
            padding:10px;
            
        }
       


        
   @media screen and (max-width: 500px) {
        .column {
            width: 100%;
  }
}
        .Grid{
            display: grid;
        }
        .column{
            border:3px solid black;
            display:table;
            float: left;
            width: 32%;
            padding: 5px;
            border-radius:30px;
            border-collapse: seperate;
            margin:5px;
        }
        .Grid{
            display: grid;
            grid-template-columns: auto auto auto;
            padding: 10px;
}
        
        .column img{
            height:300px;
            width:400px;
            border-radius:60px;
        }
        
        .column button{
            border-color: #2196F3;
            color: black;
             border: 2px solid;
            border-radius: 5px;
            background-color: white;
            padding: 14px 28px;
            font-size: 16px;
            cursor: pointer;
            margin-left:30%;
            box-shadow: 0 3px #111;
            
        }
        .column button:hover{
            background: red;
            color: white;
           box-shadow: 0 1px #ec6068;
        }
       column .button:active {
            background-color: #3e8e41;
            box-shadow: 0 5px #666;
            transform: translateY(4px);
            }
       .column  button:disabled,
                button[disabled]{
                border: 1px solid #999999;
                background-color: #ff6961;
                color: #666666;
            }
        .column input{
            border-radius:6px;
            padding:10px;
        }
       
    </style>
