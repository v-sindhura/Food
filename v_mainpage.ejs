   @media screen and (max-width: 500px) {
  .column {
    width: 100%;
  }
}
        .column{
            /*border:3px solid black;*/
            display:table;
            float: left;
  width: 33.33%;
  padding: 10px;
            border-radius:30px;
            border-collapse: seperate;
        }
            .Grid::after {
  content: "";
  clear: both;
  display: table;
                padding:20px;
}
        .column button{
            border-radius:20px;
            background:transparent;
            color:green;
            padding:6px;
            border:2px solid green;
            
        }
        .column input{
            border-radius:6px;
            padding:10px;
