            <li><a href="/customer/cart/<%=u%>">Cart</a></li>
            <li><a class="active" href="#" class="butt">Home</a></li>
        </ul>
</nav>
    <p class="Hee">
    Choose your delicacies!!
    </p>
    <p class="Hehe">Hello <%=u%></p>
    <main>
    <%if(!before11){%>
        <div class="not-before11">
        <p>Sorry for the inconvenience but you cannot order now!!!</p>
        </div>
    <%}
    else{%>
        <div class="Grid">
            <%for(var i=0;i<menur.length;i++){%>
            <form method="post" action="/customer/cart/<%=u%>/<%=menur[i].item_id%>">
            <div class="column">
               
         <img src="<%=menur[i].item_url%>">
            <p>Item name:<%=menur[i].item_name%></p><hr>
            <p>Item Description:<%=menur[i].item_desc%></p><hr>
            <%var flag=0;
            for(var j=0;j<cartr.length;j++){
            if(cartr[j].item_id==menur[i].item_id && cartr[j].username==u)
            {
            flag=1;
            console.log(menur[i].item_name);
            break;}
        }
            if(flag==0){
        %>
        <label for="qty">Quantity &nbsp; &nbsp;</label>
            <input name="qty" type="number" placeholder="0" min="1" max="10"><hr>
            <button type="submit">Add to Cart</button>

            <% }%>
            <%if(flag==1){%>
            <label for="qty">Quantity &nbsp; &nbsp;</label>
            <input name="qty" type="number" placeholder="qty" min="1" max="10" disabled><hr>
            <button type="button" disabled>Added to cart</button>
            <%}%>
            </div>
            </form>
            <%}%>
        </div>
    <%}%>
        
	       </main>
