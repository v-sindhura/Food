    <!--This function validates the form once the submit button is clicked on, and it returns true if all conditions are valid-->
    <script type="text/javascript">
            function validateForm() {
                //var db = firebase.firestore();
                var username = document.getElementById("username1").value;               
                var email = document.getElementById("email1").value;    
                var mobno = document.getElementById("mobno1").value;  
                var password_1 =  document.getElementById("pwd1").value;  
                var password_2 = document.getElementById("pwd2").value;  
                var temp = document.getElementById("location");
