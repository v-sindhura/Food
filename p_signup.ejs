                if (username.value == "")                                  
                { 
                    alert("Please enter your username."); 
                    username.focus(); 
                    return false; 
                }    
                      
                if (email.value == "")                                   
                { 
                    alert("Please enter a valid e-mail address."); 
                    email.focus(); 
                    return false; 
                } 
   
                if (email.value.indexOf("@", 0) < 0)                 
                { 
                    alert("Please enter a valid e-mail address."); 
                    email.focus(); 
                    return false; 
                } 
   
                if (email.value.indexOf(".", 0) < 0)                 
                { 
                    alert("Please enter a valid e-mail address."); 
                    email.focus(); 
                    return false; 
                } 
   
                if (mobno.value == "")                         
                { 
                    alert("Please enter your valid phone number."); 
                    mobno.focus(); 
                    return false; 
                } 

                if (mobno.value<0)
                {
                    alert("Please enter your valid phone number."); 
                    mobno.focus(); 
                    return false; 
                }   

                if (mobno.length() < 10)                     
                { 
                    alert("Please enter valid phone number."); 
                    mobno.focus(); 
                    return false; 
                } 

                if (mobno.length() > 10)
                {
                    alert("Please enter valid phone number."); 
                    mobno.focus(); 
                    return false; 
                }
   
                if (password_1.value == "")                        
                { 
                    alert("Please enter your password"); 
                    password_1.focus(); 
                    return false; 
                } 

                if (password_1.length() <4)                        
                { 
                    alert("Password must be greater than 4 characters"); 
                    password_1.focus(); 
                    return false; 
                } 

                } 

                if (password_2.value == "")                        
                { 
                    alert("Please enter confirmation password"); 
                    password_2.focus(); 
                    return false; 
                } 

                if (password_2.length() <4)                        
                { 
                    alert("Password must be greater than 4 characters"); 
                    password_1.focus(); 
                    return false; 

   
                if (password_1.value != password_2.value)                  
                { 
                    alert("Passwords are not matching!"); 
                    password_2.focus();
                    return false; 
                } 
   
                return true; 

            }
