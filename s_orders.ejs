//This page displays the orders that the delivery man has already delivered
<!DOCTYPE html>
<html>
    <head>
        <style>
            body{
                margin:0;
            }
            .og-grid {
                padding-top:10%;
                list-style: none;
                padding:0px 2px;
                margin: 0 auto;
                width: 100%;
            }
            .og-grid li {
                display:block;
                margin: 10px 5px 0 5px;
                vertical-align: top;
                width:75%;
                height: 150px;
                padding-left: 10px;
                border: 1px solid #555;
                background-color: #f1f1f1;
                border-radius: 10px;
            }
            .og-grid button{
                position: absolute;
                left:75%;
                background-color: forestgreen;
                border:none;
                border-radius: 20px;
                outline-color: black;
                width:150px;
                height:40px;
                color:white;
            }
            .og-grid ul{
                border:1px solid #555;
                background-color: #f1f1f1;
                list-style-type:none;
            }
            .nav {                
                list-style-type:none;
                margin:0;
                padding:0;
                width:15%;
                height:100%;
                position:fixed;
                overflow: auto;
                background-color: lightgrey;
            }
            .nav li a{
                display:block;
                color:black;
                text-decoration: none;
                padding:8px 16px;
            }
            .nav li:last-child {
                border-bottom: none;
            }
            .nav li a:hover:not(.active) {
                background-color: darkgrey;
            }
            .nav li a:hover,a:active{
                background-color: lightgreen;
            }
            .nav li a.active {
                background-color: lightgreen;
            }
        </style>
    </head>
    <body>
        <ul class="nav">
            <li><a href="/delivery/<%=dname%>">Orders to deliver</a></li>
            <li><a class=active href="/deliveredorders/<%=dname%>">Delivered orders</a></li>
        </ul> 
        <div style="margin-left:17%;padding:1px 16px;height:1000px;">
            <h1>Hi <%=dname%> !!</h1>
            <ul id="og-grid" class="og-grid">
            <main id="x">

            </main>
            </ul>
            <script type="text/javascript">            
                if(<%=o.length%>==0){
                    document.getElementById("x").innerHTML='<h3>You dont have any delivered orders</h3>';
                }
                else{
                    document.getElementById("x").innerHTML='<h3>your delivered orders</h3><%for(var i=0;i<o.length;i++){%><li>o_id:<%=o[i].o_id%> <p>username:<%=o[i].uname%></p><p>cost:<%=o[i].cost%></p></li><%}%>';

                }
            </script>
        </div>
    </body>
</html>