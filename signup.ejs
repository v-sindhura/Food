                    alert("Please enter your valid phone number."); 
                    mobno.focus(); 
                    return false; 
                }   

                if (mobno.length() < 10)                     
                { 
                    alert("Please enter valid phone number."); 
                    mobno.focus(); 
                    return false; 
                } 

                if (mobno.length() > 10)
                {
